<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="t4.submarine.com.DAO.PhotoMapper">
	<!--  -->
	<select id="selectOnePhoto" parameterType="int" resultType="Photo">
		SELECT * 
		FROM photo
		WHERE photono=#{photono}
	</select>
	
	
	<!-- ajaxUpload -->
	<insert id="ajaxUpload" parameterType="Photo">
		INSERT INTO PHOTO
		VALUES(
			photoseq.nextVal,
			#{albumno},
			#{privacy},
			#{photoimg},
			#{photocontent},
			#{keyword},
			#{dateoftravel},
		<if test="lat != null">
			#{lat},
			#{lng},
		</if>
			#{memberno}
		)		
	</insert>
	
	<!-- 임시 업로드 -->
	<insert id="uploadimg" parameterType="Image">
		INSERT INTO uploadimg
		VALUES(
			imgseq.nextVal,
			#{originalfilename},
			#{savedfilename}
		)
	</insert>
</mapper>
